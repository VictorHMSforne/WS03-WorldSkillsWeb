@model IEnumerable<WS.Models.Pesquisa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pergunta1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pergunta2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pergunta3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resultado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pergunta1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pergunta2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pergunta3)
            </td>
            <td>
               @item.Resultado.ToString("F") <label>%</label>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
